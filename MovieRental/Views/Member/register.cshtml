@model MovieRental.Models.RegisterViewModel

<h1> 會員註冊 </h1>
<form asp-action="Register" method="post" enctype="multipart/form-data">
    <div>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        @Html.AntiForgeryToken()
        <div>
            <label asp-for="Avatar" class="control-label"></label>
            <input type="file" name="Avatar" id="myimg">
        </div>
        <div>
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <input type="text" asp-for="UserName" />
        </div>
        <div>
            <input type="text" asp-for="Email" />
        </div>
        <div>
            <input type="password" asp-for="Password" placeholder="請輸入密碼" />
        </div>
        <div>
            <input type="password" id="CheckPassword" placeholder="再次輸入密碼"/>
        </div>
        <div>
            <button type="submit">/送出</button>
        </div>
    </div>
</form>
